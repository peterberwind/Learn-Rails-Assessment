<header class="main-header">
  <!-- Logo -->
  <a href="#" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>H</b>H</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>HalfHelix</b>HQ</span>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <% if user_signed_in? %>
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag "user2-160x160.jpg", class: "user-image" %>
            <span class="hidden-xs"><%= current_user.email %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <%= image_tag "user2-160x160.jpg", class: "img-circle" %>
              <p>
                <%= current_user.email %>
                <small>Member since <%= current_user.created_at.to_time.strftime('%B %e %Y') %></small>
              </p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to "Profile", edit_user_registration_path(current_user) %>
              </div>
              <div class="pull-right">
                <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
              </div>
            </li>
          </ul>
        </li>
        <!-- Control Sidebar Toggle Button -->
      </ul>
    </div>
    <% else %>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <%= link_to "Sign Up", new_user_registration_path %>
        </li>
        <li class="dropdown user user-menu">
          <%= link_to "Log In", new_user_session_path %>
        </li>
      </ul>
    </div>
    <% end %>
  </nav>
</header>
