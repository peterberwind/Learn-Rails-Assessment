<!-- Content Header (Page header) -->
<section class="content-header">
  <h1 class="title">Project</h1>
  <div class="actions">
    <%= link_to "Create New Project", new_project_path, class: "btn btn-primary" %>
  </div>
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>Id</th>
              <th>Title</th>
              <th>Client</th>
              <th>Created On</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
            <% @projects.each do |project|  %>
              <tr>
                <td><%= project.id %></td>
                <td><%= project.title %></td>
                <td>Client Name</td>
                <td><%= project.created_at.to_time.strftime('%B %e %Y') %></td>
                <td><span class="label label-<%= project.status.downcase %>"><%= project.status %></span></td>
                <td><%= link_to "View", project_path(project) %> / <%= link_to "Edit", edit_project_path(project) %></td>
              </tr>
            <% end %>
          </table>

          <% if @projects.empty? %>
            <div class="empty">
              <h1>No Projects Added Yet â˜¹</h1>
            </div>
          <% end %>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
</section>

<!-- BAR CHART -->
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Bar Chart</h3>
  </div>
  <div class="box-body">
    <div class="chart">
      <canvas id="barChart" style="height:230px"></canvas>
    </div>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
